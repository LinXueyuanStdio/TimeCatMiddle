<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_title_attachment_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="@string/attachment_info_title"
        android:layout_gravity="center"
        android:gravity="center"
        android:textColor="@color/master_textColorPrimary"
        android:textSize="16sp"
        android:textStyle="bold" />

    <com.timecat.middle.block.view.StablerRecyclerView
        android:id="@+id/rv_attachment_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:overScrollMode="never" />

    <TextView
        android:id="@+id/tv_confirm_as_bt_attachment_info"
        android:layout_width="wrap_content"
        android:layout_height="36dp"
        android:layout_gravity="end"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/selectable_item_background"
        android:paddingLeft="12dp"
        android:paddingTop="8dp"
        android:paddingRight="12dp"
        android:paddingBottom="8dp"
        android:text="@string/act_get_it"
        android:textColor="@color/master_textColorPrimary"
        android:textStyle="bold" />

</LinearLayout>