<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <EditText
        android:id="@+id/edit_content"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="start|center"
        android:autoLink="all"
        android:background="@android:color/transparent"
        android:gravity="start|center|top"
        android:hint="@string/hint_content"
        android:lineSpacingMultiplier="1.2"
        android:minLines="3"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:scrollbars="none"
        android:textColor="@color/master_textColorPrimary"
        android:textColorHint="@color/master_textColorSecondary"
        android:textIsSelectable="false"
        android:textSize="16sp"
        tools:ignore="SpUsage" />

    <com.timecat.middle.block.view.StablerRecyclerView
        android:id="@+id/rv_check_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:isScrollContainer="false"
        android:overScrollMode="never"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/ll_move_checklist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="gone">

        <ImageView
            android:id="@+id/iv_move_checklist_as_bt"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginStart="8dp"
            android:scaleType="centerInside"
            android:src="@drawable/act_move_checklist"
            android:tint="@color/master_icon_view" />

        <TextView
            android:id="@+id/tv_move_checklist_as_bt"
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:layout_marginStart="3dp"
            android:background="@drawable/selectable_item_background_light"
            android:gravity="center_vertical"
            android:text="@string/act_move_check_list"
            android:textColor="@color/master_icon_view"
            android:textSize="12sp" />

    </LinearLayout>

</LinearLayout>

