<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="VoiceVisualizer">
        <attr name="numColumns" format="integer" />
        <attr name="renderColor" format="color" />
        <attr name="renderRange">
            <enum name="top" value="0" />
            <enum name="bottom" value="1" />
            <enum name="both" value="2" />
        </attr>
        <attr name="renderType">
            <flag name="bar" value="0x1" />
            <flag name="pixel" value="0x2" />
            <flag name="fade" value="0x4" />
        </attr>
    </declare-styleable>

    <declare-styleable name="waveView">
        <attr name="view_waveColor" format="color" />
        <attr name="view_texture_bg_waveColor" format="color" />
        <attr name="view_waveOffset" format="dimension" />
        <attr name="view_waveCount" format="dimension" />
    </declare-styleable>

</resources>